<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>MakeFriends</display-name>
  <welcome-file-list>
    <welcome-file>view/index.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>userSessionKey</param-name>
    <param-value>user</param-value>
  </context-param>
  <context-param>
    <param-name>RedirctPage</param-name>
    <param-value>/view/login.jsp</param-value>
  </context-param>
  <context-param>
    <param-name>UnchekURL</param-name>
    <param-value>/view/result.jsp,view/login.jsp,login.jsp,login,/view/about.jsp,/view/contact.jsp,/view/index.jsp,/view/login.jsp,/view/register.jsp</param-value>
  </context-param>
  <filter>
    <filter-name>encoding</filter-name>
    <filter-class>filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>charset</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter>
  <filter-name>content</filter-name>
  <filter-class>filter.ContentFilter</filter-class>
  </filter>
  
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>encoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/view/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>content</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>